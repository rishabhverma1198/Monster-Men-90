
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to identify the admin user by their email.
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'jayantv427@gmail.com';
    }

    // Admin records are only readable/writable by the admin themselves.
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Products and their variants are publicly readable.
    // Only the admin can modify them.
    match /products/{productId} {
      allow get, list: if true;
      allow write: if isAdmin();

      match /variants/{variantId} {
        allow get, list: if true;
        allow write: if isAdmin();
      }
    }

    // Rule for the entire orders_leads collection
    // This allows the admin to LIST all documents in this collection for the leads page.
    match /orders_leads {
      allow list: if isAdmin();
    }

    // Rule for individual order documents
    // This allows creating an order and lets the admin get/update a specific order.
    match /orders_leads/{orderId} {
      allow create: if true;
      allow get, update, delete: if isAdmin();
    }
  }
}
