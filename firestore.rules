
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to identify the admin user by their email.
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'jayantv427@gmail.com';
    }

    // Admin records are only readable/writable by the admin themselves.
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Products and their variants are publicly readable.
    // Only the admin can modify them.
    match /products/{productId} {
      allow get, list: if true;
      allow write: if isAdmin();

      match /variants/{variantId} {
        allow get, list: if true;
        allow write: if isAdmin();
      }
    }

    // Orders can be created by anyone (guest checkout).
    match /orders_leads/{orderId} {
      allow create: if true;
      allow get, update, delete: if isAdmin();
    }

    // THIS IS THE CRITICAL FIX:
    // This rule specifically allows the admin to LIST the entire 'orders_leads' collection.
    // This is separate from the rule above because 'list' applies to the collection path,
    // not the individual document path.
    match /orders_leads {
      allow list: if isAdmin();
    }
  }
}
