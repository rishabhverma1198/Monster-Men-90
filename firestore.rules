
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to identify the admin user by their email.
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'jayantv427@gmail.com';
    }

    // Admin records are only readable/writable by the admin themselves.
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Products and their variants are publicly readable.
    // Only the admin can create, update, or delete them.
    match /products/{productId} {
      allow get, list: if true;
      allow write: if isAdmin();

      match /variants/{variantId} {
        allow get, list: if true;
        allow write: if isAdmin();
      }
    }
    
    // IMPORTANT: Listing all orders is now disallowed by default.
    // This was the source of the permission errors.
    // The app should use specific queries (like track order) instead.
    // We only allow admin to list recent 5 orders for the dashboard.
    match /orders_leads {
        allow list: if isAdmin() && query.limit <= 5;
    }

    // Individual orders can be created by anyone (checkout process).
    // Only the admin can read, update, or delete a specific order document.
    match /orders_leads/{orderId} {
      allow create: if true;
      allow get, update, delete: if isAdmin();
    }
  }
}
